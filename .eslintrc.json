{
	"env": {
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
            "error",
            "tab"
        ],
		"linebreak-style": [
            "warn",
            "windows"
        ],
		"quotes": [
            "error",
            "single"
        ],
		"semi": [
            "error",
            "always"
        ],
		"no-console": [
			"off"
		]
	}
}
